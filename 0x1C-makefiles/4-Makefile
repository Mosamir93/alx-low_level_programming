CC = gcc
SRC = main.c school.c
OBJ = ${SRC:.c=.o}
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all
all: ${NAME}

${NAME}: ${OBJ}
	${CC} ${OBJ} -o ${NAME}

%.o: %.c
	${CC} ${CFLAGS} -c $< -o $@

.PHONY: clean
clean:
	${RM} *~ ${NAME}

.PHONY: oclean
oclean:
	${RM} ${OBJ}

.PHONY: fclean
fclean: clean oclean

.PHONY: re
re: oclean all
